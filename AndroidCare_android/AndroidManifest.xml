<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.androidCare.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

	<!-- Permisos -->
	<uses-permission android:name="android.permission.GET_ACCOUNTS"></uses-permission> <!-- obtención de las cuentas de google -->
	<uses-permission android:name="android.permission.USE_CREDENTIALS"></uses-permission> <!-- usar las cuentas de google -->
	<uses-permission android:name="android.permission.INTERNET"></uses-permission> <!-- descargar datos de Internet -->
		
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlertDialogReceiver"
            android:label="@string/app_name" >
            <intent-filter>
            </intent-filter>
        </activity>
        
        <receiver  android:process=":remote" android:name="AlarmReceiver"></receiver>
        <service 	android:enabled="true" android:name="org.androidCare.android.service.LocalService" /> <!-- Hay que poner la clase con el paquete, porque está en distinto paquete que aquel que le invoca -->
    </application>
</manifest>